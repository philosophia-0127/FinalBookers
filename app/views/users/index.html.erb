<div class="container">

  <p class="text-success"><%= flash[:notice] %></p>


  <div class="row">
    <div class="col-md-3 col-xs-3">

      <div class="user-info">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>

        <%= link_to edit_user_path(@user.id) do %>
          <div class="btn btn-outline-secondary btn-block">
            <span class="fas fa-user-cog"></span>
          </div>
        <% end %>

      </div>

      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model: @book, local: true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: 'btn-success' %>
        <% end %>
      </div>

    </div>




    <div class="col-md-8 offset-md-1 col-xs-9">
      <div class="users">
        <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :size => '45x45', format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

  </div>

</div>