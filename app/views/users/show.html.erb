<div class="container">

  <p class="text-success"><%= flash[:notice] %></p>


  <div class="row">
    <div class="col-md-3 col-xs-3">

      <div class="user-info">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>

        <% if @user == current_user %>
          <%= link_to edit_user_path(current_user.id) do %>
            <div class="btn btn-outline-secondary btn-block">
              <span class="fas fa-user-cog"></span>
            </div>
          <% end %>
        <% else %>
          <%= link_to edit_user_path(@user.id) do %>
            <div class="btn btn-outline-secondary btn-block">
              <span class="fas fa-user-cog"></span>
            </div>
          <% end %>
        <% end %>

      </div>

      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model: @book, local: true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: 'btn-success' %>
        <% end %>
      </div>

    </div>




    <div class="col-md-8 offset-md-1 col-xs-9">
      <div class="user">
        <h1>Books</h1>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :size => '45x45', fallback: "no_image.jpg" %>
                <% end %>
              </td>

              <td><%= link_to book.title, book_path(book.id) %></td>

              <td><%= book.body %></td>

              <% if book.favorited_by?(current_user) %>
                <td>
                  <%= link_to book_favorites_path(book), method: :delete, class: 'text-danger text-decoration-none' do %>
                    <i class="fas fa-heart"></i>
                    <%= book.favorites.count %>
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to book_favorites_path(book), method: :post, class: 'text-primary text-decoration-none' do %>
                    <i class="fas fa-heart"></i>
                    <%= book.favorites.count %>
                  <% end %>
                </td>
              <% end %>


              <td>コメント数：<%= book.book_comments.count %></td>

            </tr>
          <% end %>
        </table>
      </div>
    </div>

  </div>

</div>