<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>

      <div class="text-danger">
        <% if @user.errors.any? %>a
          <%= @user.errors.count %>errors prohibited this obj from being saved:
          <br>
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>

      <%= form_with model: @user, local: true do |f| %>
        <label for="user-name">Name</label><br>
        <%= f.text_field :name, autofocus: true %><br>
        <label for="user-image">Image</label><br>
        <%= f.attachment_field :profile_image %><br>
        <label for="user-introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true %><br>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>